@model powererp.Models.LeavesDetail

@{
    string str_command = (Model.Id == 0) ? "新增" : "修改";
    ViewData["Title"] = $"資料{str_command}";
    Layout = "_LayoutAdmin";
    using var emp = new z_sqlEmployees();
    using var codeData = new z_sqlCodeDatas();
    var employeesList = emp.GetDropDownList(true);
    var typeList = codeData.GetDropDownList("Leave", true);
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal  mt-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ParentNo)

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelRequiredFor(model => model.EmpName)
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EmpNo, employeesList , new { @class = "form-control selectpicker" ,
                @data_live_search = "true" } )
            @Html.ValidationMessageFor(model => model.EmpNo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.TypeName)
        </div>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.TypeNo, typeList, new { @class = "form-control selectpicker" ,
                        @data_live_search = "true"})
            @Html.ValidationMessageFor(model => model.TypeNo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.StartTime)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control         datetimepicker", @type = "text" } })
            @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.EndTime)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control datetimepicker",
                        @type = "text" } })
            @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.Hours)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Hours, new { htmlAttributes = new { @class = "form-control ", @type =
                        "number" } })
            @Html.ValidationMessageFor(model => model.Hours, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.SpecialDays)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SpecialDays, new { htmlAttributes = new { @class = "form-control ", @type =
                        "number" } })
            @Html.ValidationMessageFor(model => model.SpecialDays, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.TotSpecialDays)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TotSpecialDays, new { htmlAttributes = new { @class = "form-control ", @type
                        = "number" } })
            @Html.ValidationMessageFor(model => model.TotSpecialDays, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.SumSpecialDays)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SumSpecialDays, new { htmlAttributes = new { @class = "form-control ", @type
                        = "number" } })
            @Html.ValidationMessageFor(model => model.SumSpecialDays, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.ReasonText)
        </div>
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ReasonText, 5, 0, new { @class = "form-control", @style = "width: 100%;" })
            @Html.ValidationMessageFor(model => model.ReasonText, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-2">
            @Html.LabelRequiredFor(model => model.Remark)
        </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
        </div>
    </div>
    @await Html.PartialAsync("_PartialFormSubmit")
</div>
}