@model powererp.Models.Leaves

@{
    string str_command = (Model.Id == 0) ? "新增" : "修改";
    ViewData["Title"] = $"資料{str_command}";
    Layout = "_LayoutAdmin";
    using var user = new z_sqlUsers();
    var userList = user.GetDropDownList();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal  mt-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.BaseNo)
        @Html.HiddenFor(model => model.SheetNo)

        @if (Model.Id > 0)
        {
            <div class="row form-group">
                <div class="col-md-2">
                    @Html.LabelRequiredFor(model => model.SheetNo)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SheetNo, new { htmlAttributes = new { @class = "form-control" , @readonly = "readonly" , @disabled="disabled"} })
                </div>
            </div>
        }

        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelRequiredFor(model => model.SheetDate)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SheetDate, new { htmlAttributes = new { @class = "form-control datepicker" , @type="text" } })
                @Html.ValidationMessageFor(model => model.SheetDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelRequiredFor(model => model.HandleName)
            </div>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HandleNo, userList , new { @class = "form-control selectpicker" , @data_live_search = "true" } )
                @Html.ValidationMessageFor(model => model.HandleNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-2">
                @Html.LabelRequiredFor(model => model.Remark)
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
            </div>
        </div>
        @await Html.PartialAsync("_PartialFormSubmit")
    </div>
}